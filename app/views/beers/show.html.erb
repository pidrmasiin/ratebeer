<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @beer.name %>
</p>

<p>
  <strong>Style:</strong>
  <%= @beer.style %>
</p>

<p>
  <strong>Brewery:</strong>
  <%= link_to @beer.brewery.name, brewery_path(@beer.brewery_id) %> 
</p>

<p>
  Has <%= pluralize(@beer.ratings.length, 'rating') %> <br/>
  <% if  @beer.average_rating() %>
    Avarage: <%= @beer.average_rating().truncate(2) %>
  <% end %>
</p>

<%= link_to 'Edit', edit_beer_path(@beer)  if current_user%> 

