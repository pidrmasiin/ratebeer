<!DOCTYPE html>
<html>
  <body>
  <head>

    <title>Ratebeer</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <div class="navibar">
    <%= link_to 'Breweries', breweries_path %> |
    <%= link_to 'Beers', beers_path %> |
    <%= link_to 'Ratings', ratings_path %> |
     <%= link_to 'Users', users_path %>  /////

    <% if !current_user %>
    <%= link_to 'Sign in', signin_path %> 
    <%= link_to 'Sign up', signup_path %> 
    <% else %>
    <%= link_to current_user.username, user_path(current_user.id) %> |
    <%= link_to 'New rating', new_rating_path %> |
    <%= link_to 'Sign out', signout_path, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
  </div>
  <%= yield %>
  
  </body>
</html>
